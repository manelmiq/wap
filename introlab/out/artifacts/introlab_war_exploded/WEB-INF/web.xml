<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SimplestServlet</servlet-name>
        <servlet-class>cs472.SimplestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimplestServlet</servlet-name>
        <url-pattern>/Simplest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloWord</servlet-name>
        <servlet-class>cs472.HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWord</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>calculator.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calculator</url-pattern>
    </servlet-mapping>

<!--    Quiz using only servlet-->
    <servlet>
        <servlet-name>QuizServlet</servlet-name>
        <servlet-class>quizServlet.quiz</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

<!--   Quiz using JSP -->

    <servlet>
        <servlet-name>QuizServletJsp</servlet-name>
        <servlet-class>quizServletJSP.ServletQuizJava</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizServletJsp</servlet-name>
        <url-pattern>/quizServlet</url-pattern>
    </servlet-mapping>




</web-app>